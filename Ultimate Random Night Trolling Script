print(game.Players.LocalPlayer,"Is the boss!")
local uis = game:GetService("UserInputService")

uis.InputBegan:Connect(function(input)
    if input.KeyCode == Enum.KeyCode.J then
    print(game.Players.LocalPlayer,"Said: Doors are MINE! AND MINE FOREVER!")
    
local args = {
    [1] = "Left Vent Button",
    [2] = false
}

game:GetService("ReplicatedStorage").CalltoDoor:FireServer(unpack(args))

local args = {
    [1] = "Right Vent Button",
    [2] = false
}

game:GetService("ReplicatedStorage").CalltoDoor:FireServer(unpack(args))

local args = {
    [1] = "Left Door Button",
    [2] = false
}

game:GetService("ReplicatedStorage").CalltoDoor:FireServer(unpack(args))

local args = {
    [1] = "Right Door Button",
    [2] = false
}

game:GetService("ReplicatedStorage").CalltoDoor:FireServer(unpack(args))
end
end)
